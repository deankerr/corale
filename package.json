{
  "name": "corale",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @corale/esuite build",
    "build:api": "pnpm --filter @corale/api generate-api",
    "deploy:api": "pnpm --filter @corale/api convex-deploy",
    "dev": "pnpm --parallel dev",
    "dev:esuite": "pnpm --filter @corale/esuite dev",
    "dev:api": "pnpm --filter @corale/api dev",
    "start": "pnpm --filter @corale/esuite start",
    "format": "pnpm prettier --write .",
    "lint": "pnpm eslint .",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/node": "^22.7.6",
    "eslint": "^8",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript": "^5.6.3"
  }
}
