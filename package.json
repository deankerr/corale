{
  "name": "corale",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter @corale/esuite build",
    "dev": "pnpm --parallel dev",
    "dev:esuite": "pnpm --filter @corale/esuite dev",
    "dev:api": "pnpm --filter @corale/api dev",
    "start": "pnpm --filter @corale/esuite start",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@types/node": "^22.7.6",
    "typescript": "^5.6.3"
  }
}
