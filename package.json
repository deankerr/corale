{
  "name": "corale",
  "private": true,
  "scripts": {
    "build": "pnpm --filter api build",
    "build:esuite": "pnpm --filter esuite build",
    "dev": "pnpm --parallel dev",
    "dev:esuite": "pnpm --filter esuite dev",
    "dev:api": "pnpm --filter api dev",
    "start": "pnpm --filter esuite start",
    "format": "pnpm prettier --write .",
    "lint": "pnpm eslint .",
    "typecheck": "pnpm -r typecheck",
    "convex-deploy": "pnpm --filter api convex-deploy",
    "generate-api": "pnpm --filter api generate-api"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/node": "^22.7.9",
    "eslint": "^8.57.1",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript": "^5.6.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "npm:types-react@19.0.0-rc.1",
      "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1"
    }
  }
}
