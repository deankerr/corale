{
  "name": "corale",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "format": "pnpm prettier --write .",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:once": "turbo test --filter=@corale/backend -- run",
    "analyze": "turbo analyze",
    "typecheck": "turbo typecheck",
    "convex-deploy": "pnpm --filter backend convex-deploy",
    "generate-api": "pnpm --filter backend generate-api",
    "format:check": "prettier --check .",
    "clean": "rm -rf node_modules **/node_modules pnpm-lock.yaml"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.3.4"
  },
  "packageManager": "pnpm@9.12.1",
  "pnpm": {
    "overrides": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "next": "14.2.18",
      "eslint-config-next": "14.2.18",
      "@next/bundle-analyzer": "14.2.20",
      "@types/react": "18.3.1",
      "@types/react-dom": "18.3.1"
    }
  },
  "peerDependencies": {
    "@next/bundle-analyzer": "14.2.20",
    "eslint-config-next": "14.2.18",
    "next": "14.2.18",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
