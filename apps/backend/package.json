{
  "name": "@corale/backend",
  "private": true,
  "scripts": {
    "dev": "convex dev",
    "typecheck": "tsc --noEmit",
    "lint": "eslint convex/",
    "test": "vitest",
    "test:once": "vitest run",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text",
    "convex-init": "pnpx convex run init",
    "convex-deploy": "convex deploy",
    "generate-api": "mkdir -p out && convex function-spec > out/fn-spec.json && convex-helpers ts-api-spec --input-file out/fn-spec.json --output-file ${OUTPUT_FILE:-out/convex-api}"
  },
  "devDependencies": {
    "@corale/config-typescript": "workspace:*",
    "@corale/eslint-config": "workspace:*",
    "@edge-runtime/vm": "^5.0.0",
    "@types/node": "^22.13.1",
    "convex-test": "^0.0.35",
    "globals": "^15.14.0",
    "type-fest": "^4.33.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.1.9",
    "@clerk/backend": "^1.23.11",
    "@corale/shared": "workspace:*",
    "@fal-ai/client": "^1.2.3",
    "@openrouter/ai-sdk-provider": "^0.2.1",
    "ai": "^4.1.26",
    "convex": "^1.19.0",
    "convex-ents": "^0.13.0",
    "convex-helpers": "^0.1.71",
    "deep-object-diff": "^1.1.9",
    "fast-content-type-parse": "^2.0.1",
    "itty-time": "^1.0.6",
    "ky": "^1.7.4",
    "nanoid": "^5.0.9",
    "openai": "^4.83.0",
    "remeda": "^2.20.1",
    "sharp": "^0.33.5",
    "svix": "^1.45.1",
    "ufo": "^1.5.4",
    "zod": "^3.24.1"
  }
}
