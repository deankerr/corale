{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/tsconfig.json", "**/.env.local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "APP_HOSTNAME",
        "CONVEX_ENVIRONMENT",
        "CONVEX_DEPLOY_KEY",
        "CLERK_JWT_ISSUER_DOMAIN",
        "CLERK_SECRET_KEY",
        "CLERK_WEBHOOK_SECRET",
        "ELEVENLABS_API_KEY",
        "FAL_KEY",
        "OPENROUTER_API_KEY",
        "NEXT_PUBLIC_CONVEX_URL",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_VERCEL_ENV",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "ANALYZE"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "out/**"]
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"],
      "outputs": ["*.tsbuildinfo"]
    },
    "lint": {
      "dependsOn": ["^build", "^lint"],
      "outputs": [".eslintcache", ".next/cache/eslint/**"]
    },
    "test": {
      "dependsOn": ["^build", "^test"],
      "outputs": ["coverage/**"]
    },
    "analyze": {
      "dependsOn": ["^build", "^analyze"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": [
        "NODE_ENV",
        "APP_HOSTNAME",
        "CONVEX_ENVIRONMENT",
        "CLERK_JWT_ISSUER_DOMAIN",
        "CLERK_SECRET_KEY",
        "CLERK_WEBHOOK_SECRET",
        "ELEVENLABS_API_KEY",
        "FAL_KEY",
        "OPENROUTER_API_KEY",
        "NEXT_PUBLIC_CONVEX_URL",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_VERCEL_ENV"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "env": [
        "NODE_ENV",
        "APP_HOSTNAME",
        "CONVEX_ENVIRONMENT",
        "CLERK_JWT_ISSUER_DOMAIN",
        "CLERK_SECRET_KEY",
        "CLERK_WEBHOOK_SECRET",
        "NEXT_PUBLIC_CONVEX_URL",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_VERCEL_ENV"
      ]
    }
  }
}
